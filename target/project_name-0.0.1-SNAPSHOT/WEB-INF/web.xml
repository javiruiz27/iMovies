  <!-- WEBAPP SERVLETS -->
    <!-- Google Drive files - retrieve -->
    <servlet>
        <servlet-name>GoogleDriveFileListController</servlet-name>
        <servlet-class>aiss.GoogleDriveFileListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoogleDriveFileListController</servlet-name>
